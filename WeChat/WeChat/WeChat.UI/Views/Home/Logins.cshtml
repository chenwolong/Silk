@{
    Layout = null;
}

<!doctype html>
<html lang="en" class="fullscreen-bg">

<head>
    <title>Login</title>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0">
    <!-- VENDOR CSS -->
    <link rel="stylesheet" href="~/Content/master/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/Content/master/vendor/font-awesome/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/Content/master/vendor/linearicons/style.css">
    <!-- MAIN CSS -->
    <link rel="stylesheet" href="~/Content/master/css/main.css">
    <!-- FOR DEMO PURPOSES ONLY. You should remove this in your project -->
    <link rel="stylesheet" href="~/Content/master/css/demo.css">
    <!-- GOOGLE FONTS -->
    <!-- ICONS -->
    <link rel="apple-touch-icon" sizes="76x76" href="~/Content/master/img/apple-icon.png">
    <link rel="icon" type="image/png" sizes="96x96" href="~/Content/master/img/favicon.png">
    <script src="~/Content/master/vendor/jquery/jquery.min.js"></script>
</head>

<body>
    <!-- WRAPPER -->
    <div id="wrapper">
        <div class="vertical-align-wrap">
            <div class="vertical-align-middle">
                <div class="auth-box ">
                    <div class="left">
                        <div class="content">
                            <div class="header">
                                <div class="logo text-center">
                                    <img src="~/Content/master/img/logo-dark.png" alt="Klorofil Logo"></div>
                                <p class="lead">账户登录</p>
                            </div>
                            <form class="form-auth-small">
                                <div class="form-group">
                                    <input type="email" class="form-control" id="UserName" name="UserName"  placeholder="请输入用户名" value="@ViewBag.HX_userName">
                                </div>
                                <div class="form-group">
                                    <input type="password" class="form-control" id="UserPwd" name="UserPwd" placeholder="请输入密码" value="@ViewBag.HX_userPwd">
                                </div>
                                <div class="form-group clearfix">
                                    <label class="fancy-checkbox element-left">
                                        <input type="checkbox"  id="remember-me" name="remember-me">
                                        <span> <label for="remember-me" style="font-weight:normal;">记住我</label></span>
                                    </label>
                                </div>
                                <button type="button" class="btn btn-primary btn-lg btn-block" onclick="Login()">登录</button>
                                <div class="bottom">
                                    <span class="helper-text"><i class="fa fa-lock"></i><a href="#">&nbsp;忘记密码？</a></span>
                                </div>
                            </form>
                        </div>
                    </div>
                    <div class="right">
                        <div class="overlay"></div>
                        <div class="content text">
                            <h1 class="heading">微信公众号管理平台</h1>
                            <p>水木清华</p>
                        </div>
                    </div>
                    <div class="clearfix"></div>
                </div>
            </div>
        </div>
    </div>
    <!-- END WRAPPER -->
</body>
    <script type="text/javascript">
        function Login() {
            var UserName = $("#UserName").val();
            var UserPwd = $("#UserPwd").val();
            var remember = document.getElementById("remember-me").checked;

            $(document).ready(function (data) {
                $.ajax({
                    url: "/Home/Login",
                    type: "post",
                    contentType: "application/json",
                    dataType: "text",
                    data: JSON.stringify({ UserName: UserName, UserPwd: UserPwd, remember: remember }),
                    success: function (result, status) {
                        if (result == "Success") {
                            //登录成功 跳转
                            location.href = "/Manger/Index";//管理员登录
                        }
                        else {
                            alert(result);
                        }
                    },
                    error: function (error) {
                        alert(error);
                    }
                });
            });
        }
</script>
</html>
